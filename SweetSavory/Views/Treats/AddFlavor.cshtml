@{
  Layout = "_Layout";
}

@model SweetSavory.Models.Treat

<div class="row">
  <div class="col-md-12">
    @if(@Model == null)
    {
      <p>Sorry, this is not a valid treat.</p>
    }
    else
    {
      <div class="panel panel-primary">
        <div class="panel-heading">
          <div class="panel-title">
            <strong>Add a Flavor to @Model.Name</strong>
          </div>
        </div>
        <div class="panel-body">
          @using(Html.BeginForm())
          {
            @Html.HiddenFor(model => model.TreatId)

            @Html.Label("Select Flavor")<br>
            @Html.DropDownList("FlavorId")<br><br>

            <input type="submit" class="btn btn-primary" value="Add Treat">
          }
        </div>
      </div>
    }
  </div>
</div>